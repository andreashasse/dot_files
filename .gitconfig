[alias]
  b = branch --show-current
  nb = !sh -c 'git checkout -b $0 origin/stable --no-track'
  xx = clean -dxf
  st = status --ignore-submodules=dirty
  ci = commit
  di = !sh -c 'git diff -b --ignore-submodules=dirty | delta'
  review = !sh -c 'git diff -b $(git merge-base $(git rev-parse --abbrev-ref HEAD) $0) | delta --side-by-side'
  rb = !sh -c 'git diff -b $0...$1 | delta --side-by-side'
  dw = diff --color-words
  co = checkout
  l  = log --graph --pretty=format:'%C(green)%h %C(yellow)%an %C(reset)%s'
  le  = log --graph --pretty=format:'%h, %an, %ar:%n%Cgreen %s %Creset'
  rel = shortlog --no-merges origin/stable..
  rba = !sh -c 'git rebase -i $(git merge-base $(git rev-parse --abbrev-ref HEAD) $0)'
  commend = commit --amend --no-edit

[user]
  email = andreas.hasselberg@gmail.com
  name = Andreas Hasselberg

[color]
  branch = auto
  diff = auto
  interactive = auto
  pager = true
  status = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  whitespace = red reverse
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[diff]
  word-diff=color
[push]
  default = simple
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
  required = true
	process = git-lfs filter-process
[core]
  editor = emacs
  hooksPath = /Users/andreas/build/bin

[github]
  user = anha0825

[delta]
    plus-color = "#012800"
    minus-color = "#340001"
    syntax-theme = Monokai Extended

[interactive]
    diffFilter = delta --color-only

[delta]
    line-numbers = true
